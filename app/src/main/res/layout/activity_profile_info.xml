<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    android:orientation="vertical">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#FFFFFF"
        android:elevation="2dp"
        app:title="Информация профиля"
        app:titleTextColor="#1A1A1A"
        app:navigationIcon="@drawable/ic_arrow_back"
        android:theme="@style/ThemeOverlay.MaterialComponents.Light"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Секция навыков -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="3dp"
                app:cardBackgroundColor="#FFFFFF"
                android:layout_marginBottom="20dp"
                app:strokeColor="#E0E0E0"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_skills"
                            app:tint="#1A1A1A"
                            android:layout_marginEnd="12dp"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Навыки"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="#1A1A1A"
                            android:fontFamily="sans-serif-medium"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/editSkillsButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Изменить"
                            style="@style/StrictButtonStyle"/>

                    </LinearLayout>

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/skillsChipGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:singleLine="false"
                        app:chipSpacingHorizontal="8dp"
                        app:chipSpacingVertical="8dp"
                        app:chipStyle="@style/StrictChipStyle"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Секция интересов -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="3dp"
                app:cardBackgroundColor="#FFFFFF"
                android:layout_marginBottom="20dp"
                app:strokeColor="#E0E0E0"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_interests"
                            app:tint="#1A1A1A"
                            android:layout_marginEnd="12dp"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Интересы"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="#1A1A1A"
                            android:fontFamily="sans-serif-medium"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/editInterestsButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Изменить"
                            style="@style/StrictButtonStyle"/>

                    </LinearLayout>

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/interestsChipGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:singleLine="false"
                        app:chipSpacingHorizontal="8dp"
                        app:chipSpacingVertical="8dp"
                        app:chipStyle="@style/StrictChipStyle"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Секция "О себе" -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="3dp"
                app:cardBackgroundColor="#FFFFFF"
                android:layout_marginBottom="20dp"
                app:strokeColor="#E0E0E0"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_info"
                            app:tint="#1A1A1A"
                            android:layout_marginEnd="12dp"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="О себе"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="#1A1A1A"
                            android:fontFamily="sans-serif-medium"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/editAboutButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Изменить"
                            style="@style/StrictButtonStyle"/>

                    </LinearLayout>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#F8F9FA"
                        app:strokeColor="#E0E0E0"
                        app:strokeWidth="1dp">

                        <TextView
                            android:id="@+id/aboutText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#1A1A1A"
                            android:textSize="15sp"
                            android:lineSpacingExtra="4dp"
                            android:padding="16dp"
                            android:fontFamily="sans-serif"
                            android:minHeight="80dp"
                            android:gravity="top|start"/>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>
</LinearLayout> 