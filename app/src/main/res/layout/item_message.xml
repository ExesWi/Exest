<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/messageRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/messageAvatar"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_default_avatar"
            app:civ_border_color="#E0E0E0"
            app:civ_border_width="1dp"
            android:layout_gravity="start|bottom"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="8dp"
            android:visibility="gone"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/messageCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:layout_margin="8dp"
            android:minWidth="64dp"
            android:maxWidth="320dp"
            android:layout_gravity="start|end|bottom">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <LinearLayout
                    android:id="@+id/replyBlock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#F0F0F0"
                    android:padding="8dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginStart="0dp"
                    android:visibility="gone"
                    android:backgroundTint="#F0F0F0"
                    android:elevation="2dp"
                    android:minWidth="64dp"
                    android:maxWidth="240dp"
                    android:clipToPadding="false"
                    android:clipChildren="false"
                    android:layout_gravity="start|end">
                    <TextView
                        android:id="@+id/replyBlockUsername"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Имя"
                        android:textStyle="bold"
                        android:textColor="#888888"
                        android:textSize="12sp"/>
                    <TextView
                        android:id="@+id/replyBlockText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Текст сообщения"
                        android:textColor="#232323"
                        android:textSize="13sp"
                        android:maxLines="2"
                        android:ellipsize="end"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/messageText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:paddingBottom="4dp"
                    android:maxWidth="280dp"/>

                <TextView
                    android:id="@+id/messageMeta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#888888"
                    android:gravity="end"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </FrameLayout>

</FrameLayout> 