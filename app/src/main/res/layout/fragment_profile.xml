<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header с градиентом -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/profile_header_background"
            android:paddingTop="48dp"
            android:paddingBottom="32dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp">

            <!-- Аватар с улучшенным дизайном -->
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profileImage"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/ic_default_avatar"
                    app:civ_border_color="#FFFFFF"
                    app:civ_border_width="4dp"
                    android:elevation="8dp"/>

                <!-- Индикатор онлайн статуса -->
                <View
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/online_status_indicator"
                    android:layout_gravity="bottom|end"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="4dp"/>

            </FrameLayout>

            <!-- Имя пользователя -->
            <TextView
                android:id="@+id/usernameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="4dp"
                android:fontFamily="sans-serif-medium"/>

            <!-- Email пользователя -->
            <TextView
                android:id="@+id/userEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#E0E0E0"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="24dp"
                android:fontFamily="sans-serif-light"/>

            <!-- Кнопка выхода -->
            <ImageButton
                android:id="@+id/logoutButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_logout"
                android:background="@drawable/logout_button_background"
                android:contentDescription="Выйти из аккаунта"
                android:layout_gravity="end"
                android:layout_marginTop="-120dp"
                app:tint="#FFFFFF"
                android:padding="12dp"/>

        </LinearLayout>

        <!-- Основной контент -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="24dp"
            android:paddingBottom="24dp">

            <!-- Заголовок разделов -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Управление профилем"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#1A1A1A"
                android:layout_marginBottom="20dp"
                android:fontFamily="sans-serif-medium"/>

            <!-- Разделы с улучшенным дизайном -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/sectionInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FFFFFF"
                android:layout_marginBottom="16dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="@drawable/card_ripple_effect"
                app:strokeColor="#F0F0F0"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:gravity="center_vertical">

                    <FrameLayout
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/section_icon_background"
                        android:layout_gravity="center_vertical">

                        <ImageView
                            android:id="@+id/sectionInfoIcon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_info"
                            app:tint="#1A1A1A" />

                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Информация"
                            android:textSize="18sp"
                            android:textColor="#1A1A1A"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Редактировать профиль"
                            android:textSize="14sp"
                            android:textColor="#888888"
                            android:layout_marginTop="2dp"
                            android:fontFamily="sans-serif"/>

                    </LinearLayout>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_arrow_forward"
                        app:tint="#CCCCCC"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/sectionMyProjects"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FFFFFF"
                android:layout_marginBottom="16dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="@drawable/card_ripple_effect"
                app:strokeColor="#F0F0F0"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:gravity="center_vertical">

                    <FrameLayout
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/section_icon_background_projects"
                        android:layout_gravity="center_vertical">

                        <ImageView
                            android:id="@+id/sectionMyProjectsIcon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_feed"
                            android:layout_gravity="center"
                            app:tint="#FFFFFF" />

                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Мои проекты"
                            android:textSize="18sp"
                            android:textColor="#1A1A1A"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Управление проектами"
                            android:textSize="14sp"
                            android:textColor="#888888"
                            android:layout_marginTop="2dp"
                            android:fontFamily="sans-serif"/>

                    </LinearLayout>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_arrow_forward"
                        app:tint="#CCCCCC"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/sectionPortfolio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FFFFFF"
                android:layout_marginBottom="16dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="@drawable/card_ripple_effect"
                app:strokeColor="#F0F0F0"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:gravity="center_vertical">

                    <FrameLayout
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/section_icon_background_portfolio"
                        android:layout_gravity="center_vertical">

                        <ImageView
                            android:id="@+id/sectionPortfolioIcon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_portfolio"
                            android:layout_gravity="center"
                            app:tint="#FFFFFF" />

                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Портфолио"
                            android:textSize="18sp"
                            android:textColor="#1A1A1A"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ссылка на портфолио"
                            android:textSize="14sp"
                            android:textColor="#888888"
                            android:layout_marginTop="2dp"
                            android:fontFamily="sans-serif"/>

                    </LinearLayout>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_arrow_forward"
                        app:tint="#CCCCCC"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/sectionSettings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FFFFFF"
                android:layout_marginBottom="16dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="@drawable/card_ripple_effect"
                app:strokeColor="#F0F0F0"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:gravity="center_vertical">

                    <FrameLayout
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/section_icon_background_settings"
                        android:layout_gravity="center_vertical">

                        <ImageView
                            android:id="@+id/sectionSettingsIcon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_settings"
                            android:layout_gravity="center"
                            app:tint="#FFFFFF" />

                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Настройки"
                            android:textSize="18sp"
                            android:textColor="#1A1A1A"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Настройки приложения"
                            android:textSize="14sp"
                            android:textColor="#888888"
                            android:layout_marginTop="2dp"
                            android:fontFamily="sans-serif"/>

                    </LinearLayout>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_arrow_forward"
                        app:tint="#CCCCCC"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large"/>

    </LinearLayout>
</ScrollView>