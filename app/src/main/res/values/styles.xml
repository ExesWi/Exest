<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <!-- Современный стиль для BottomNavigationMenu -->
    <style name="ModernBottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@drawable/modern_bottom_nav_background</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="itemIconTint">@color/modern_bottom_nav_colors</item>
        <item name="itemIconSize">17dp</item>
        <item name="labelVisibilityMode">unlabeled</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:minHeight">64dp</item>
        <item name="android:gravity">center</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
    
    <!-- Стиль для анимации нажатия -->
    <style name="BottomNavigationItemStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@drawable/bottom_nav_item_background</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>
    
    <!-- Строгий стиль для чипов -->
    <style name="StrictChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:textColor">#1A1A1A</item>
        <item name="android:textSize">14sp</item>
        <item name="chipBackgroundColor">#F5F5F5</item>
        <item name="chipStrokeColor">#E0E0E0</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="chipMinHeight">32dp</item>
        <item name="chipMinTouchTargetSize">32dp</item>
    </style>
    
    <!-- Стиль для кнопок в строгом дизайне -->
    <style name="StrictButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">#1A1A1A</item>
        <item name="android:textSize">12sp</item>
        <item name="android:backgroundTint">#F5F5F5</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>
    
    <!-- Современный стиль для полей ввода -->
    <style name="ModernTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
        <item name="boxStrokeColor">#E0E0E0</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="hintTextColor">#1A1A1A</item>
        <item name="android:textColorHint">#888888</item>
        <item name="errorEnabled">true</item>
    </style>
    
</resources> 